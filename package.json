{
  "name": "langflow-mcp-server",
  "version": "1.0.0",
  "description": "Integration between Langflow and Model Context Protocol (MCP)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "langflow-mcp-server": "./dist/mcp/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prepublishOnly": "npm run build",
    "start": "node dist/mcp/index.js",
    "start:http": "MCP_MODE=http node dist/mcp/index.js",
    "dev": "npm run build && npm run start",
    "dev:http": "MCP_MODE=http nodemon --watch src --ext ts --exec 'npm run build && npm run start:http'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "tsc --noEmit",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aras88/langflow-mcp.git"
  },
  "keywords": [
    "langflow",
    "mcp",
    "model-context-protocol",
    "ai",
    "workflow",
    "automation"
  ],
  "author": "Aras",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aras88/langflow-mcp/issues"
  },
  "homepage": "https://github.com/aras88/langflow-mcp#readme",
  "files": [
    "dist/**/*",
    ".env.example",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "axios-mock-adapter": "^2.1.0",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2",
    "axios": "^1.11.0",
    "dotenv": "^16.5.0",
    "zod": "^3.24.1"
  }
}
